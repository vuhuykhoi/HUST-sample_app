<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.user.gravatar_size_small), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t("label.posted") %> <%= t time_ago_in_words(micropost.created_at)%> <%= t("label.ago") %>.
    <% if current_user?(micropost.user) %>
      <%= link_to t("button.micropost.delete"), micropost, method: :delete,
                                       data: { confirm: t("dialog.delete_micropost_confirm") } %>
    <% end %>
  </span>
</li>
